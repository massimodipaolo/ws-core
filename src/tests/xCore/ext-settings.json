              "takeLastLog": {
                "criteria": "Top",
                "value": 1000
              },
              "logIgnoreRoles": [
                {
                  "level": "Warn",
                  "selectors": [
                    { "logger": { "list": [ "PUCBM.Hub.Controllers.PrenotingController" ] } },
                    {
                      "logger": {
                        "list": [ "Eurospin", "PUCBM" ],
                        "role": "StartWith"
